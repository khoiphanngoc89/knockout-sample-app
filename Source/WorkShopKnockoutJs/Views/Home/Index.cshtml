<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Products List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="productList">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Supplier</th>
                                <th>Category</th>
                                <th>Quantity Per Unit</th>
                                <th>Unit Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: productList">
                            <tr class="odd gradeX">
                                <td class="center"><span data-bind="text: ProductName"></span></td>
                                <td class="center"><span data-bind="text: $root.GetSupplier($data.SupplierID)"></span></td>
                                <td class="center"><span data-bind="text: CategoryID"></span></td>
                                <td class="center"><span data-bind="text: QuantityPerUnit"></span></td>
                                <td class="center"><span data-bind="text: UnitPrice"></span></td>
                                <td class="center">
                                    <input type="button" class="btn btn-primary" value="Edit" role="dialog" data-toggle="modal" data-target="#editModal" data-bind="click: function() { $root.product($data) }" />
                                    <input type="button" class="btn btn-danger" value="Delete" role="dialog" data-toggle="modal" data-target="#deleteModal" data-bind="click: function() { $root.product($data) }" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    <input type="button" class="btn btn-info" role="dialog" value="Add" data-toggle="modal" data-target="#addModal" />
                    
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>

<div id="addModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <input type="button" class="close" data-dismiss="modal" value="&times;" />
                <h4 class="modal-title">Add a product</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" data-bind="with: product">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="name">Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Enter product name" data-bind="value: ProductName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="SupplyId">Category:</label>
                        <div class="col-sm-10">
                            <select class="form-control" data-bind="options: $root.categoryList, optionsText: 'CategoryName', optionsValue: 'CategoryID',  value: CategoryID, optionsCaption: 'Choose category...'"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="SupplyId">Supplier:</label>
                        <div class="col-sm-10">
                            <select class="form-control" data-bind="options: $root.supplierList, optionsText: 'CompanyName',  optionsValue: 'SupplierID', value: SupplierID, optionsCaption: 'Choose supplier...'"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="QualityPerUnit">Quality per unit:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="Enter quality per unit" data-bind="value: QuantityPerUnit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="UnitPrice">Unit price:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="Enter unit price" data-bind="value: UnitPrice" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="UnitsInStock">Units in stock:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="Enter units in stock" data-bind="value: UnitsInStock" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="UnitsOnOrder">Units on order:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="Enter units on order" data-bind="value: UnitsOnOrder" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="ReorderLevel">Reorder level:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="Enter reorder level" data-bind="value: ReorderLevel" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="checkbox col-sm-10">
                            <label for="Discontinued"><input type="checkbox" data-bind="checked: Discontinued">Discontinued</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" value="Add" data-bind="click:$root.AddProduct" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Close" />
            </div>
        </div>
    </div>
</div>

